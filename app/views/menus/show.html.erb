<div class="page-header">
  <h3>Menu for <%= @menu.course.course_name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Course</dt>
      <dd><%= @menu.course.course_name %></dd>

      <dt>Soft beverage</dt>
      <dd><%= @menu.soft_beverage %></dd>

      <dt>Beer</dt>
      <dd><%= @menu.beer %></dd>

      <dt>Mixed drink</dt>
      <dd><%= @menu.mixed_drink %></dd>

      <dt>Snack</dt>
      <dd><%= @menu.snack %></dd>

      <dt>Sandwich</dt>
      <dd><%= @menu.sandwich %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/menus" class="btn btn-primary">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
      </a>
      <a href="/menus/<%= @menu.id %>/edit" class="btn btn-warning">
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
      </a>
      <a href="/delete_menu/<%= @menu.id %>" class="btn btn-danger" rel="nofollow">
        <i class="fa fa-trash" aria-hidden="true"></i>
      </a>
    </div>
  </div>
</div>
