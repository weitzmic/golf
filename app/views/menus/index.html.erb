<div class="page-header">
  <h1>
    Menus
    <a href="/menus/new" class="btn btn-lg btn-success">Add Menu <i class="fa fa-plus" aria-hidden="true"></i></a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Course</th>
        <th>Soft beverage</th>
        <th>Beer</th>
        <th>Mixed drink</th>
        <th>Snack</th>
        <th>Sandwich</th>
        <th>Actions</th>
      </tr>

      <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.course.course_name %></td>
        <td><%= menu.soft_beverage %></td>
        <td><%= menu.beer %></td>
        <td><%= menu.mixed_drink %></td>
        <td><%= menu.snack %></td>
        <td><%= menu.sandwich %></td>
        <td>
          <a href="/menus/<%= menu.id %>" class="btn btn-primary">Show</a>
          <a href="/menus/<%= menu.id %>/edit" class="btn btn-warning">Edit <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <a href="/delete_menu/<%= menu.id %>" class="btn btn-danger" rel="nofollow">Delete <i class="fa fa-trash" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
