<div class="page-header">
  <h1>
    Weathers
    <a href="/weathers/new" class="btn btn-lg btn-success">New Weather</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Temperature</th>
        <th>Summary</th>
        <th>Score</th>
        <th>Actions</th>
      </tr>

      <% @weathers.each do |weather| %>
      <tr>
        <td><%= weather.temperature %></td>
        <td><%= weather.summary %></td>
        <td><%= weather.score_id %></td>
        <td>
          <a href="/weathers/<%= weather.id %>" class="btn btn-primary">Show</a>
          <a href="/weathers/<%= weather.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_weather/<%= weather.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
