<div class="page-header">
  <h1>
    Saved Courses
    <a href="/likes/new" class="btn btn-lg btn-success">New Like</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Course</th>
        <th>Actions</th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td><%= like.course.course_name %></td>
        <td>
          <a href="/courses/<%= like.course.id %>" class="btn btn-primary">Show</a>
          <a href="/delete_like/<%= like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
